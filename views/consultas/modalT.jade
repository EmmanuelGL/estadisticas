#myModal.modal.fade(role='dialog')
    form(name="form" id="form" method='post' autocomplete='off'  novalidate ng-init='fecha()')
        div.modal-dialog
            div.modal-content.text-all
                div.modal-header
                    button.close(type='button', data-dismiss='modal' , ng-click='limpiar()') ×
                    h4.modal-title.text-all Búsqueda avanzada de tesis
                div.modal-body.text-all
                    
                        div.row
                            div.col-xs-6
                                //- input(name='modal' ng-model='modal1' style="display:none" ng-value="desorden")
                                //- input(type='text' name='departamento' placeholder='Departamento' class='form-control')
                                select.form-control(id='departamento', name='departamento',ng-model="busqueda.departamento")
                                    option(value='', disabled selected)='Elige un departamento'
                                    option( ng-repeat="item in items | unique:'departamento' | orderBy: 'departamento' "){{item.departamento}}
                                //- #autocomplete(angucomplete-alt='', placeholder="Search countries", 
                                //-     maxlength="50",pause="100",selected-object="selectedObj",local-data="nationalities",search-fields="description", 
                                //-     title-field="description",  minlength="1", input-class="form-control",  match-class="highlight")
                            
                            div.col-xs-6
                                 select.form-control(id='grado', name='grado',ng-model="busqueda.grado")
                                    option(value='', disabled selected)='Elige un grado'
                                    option(ng-repeat="item in items | unique:'grado' | orderBy: 'grado' "){{item.grado}}
                                //- input(type='text' name='grado' placeholder='Grado' class='form-control')
                        br
                        div.row
                            div.col-xs-6
                                select.form-control(id='especialidad', name='especialidad',ng-model="busqueda.especialidad")
                                    option(value='', disabled selected)='Elige una especialidad'
                                    option(ng-repeat="item in items | unique:'especialidad' | orderBy: 'especialidad' ",ng-if="item.especialidad !== null" ){{item.especialidad}}
                                //- input(type='text' name='especialidad' placeholder='Especialidad' class='form-control')
                        div.row
                            div.col-xs-6
                                h4 Desde
                                div.input-group
                                    span.input-group-addon
                                        i.glyphicon.glyphicon-calendar
                                    
                                    input.form-control(type='date', name='currentDate1', ng-model='example.currentDate1', min="1960-01-01", max="{{example.max | date: 'yyyy-MM-dd'}}", required)
                                div.col-xs-12(ng-show='form.$submitted || form.currentDate1.$touched')
                                    div.error(ng-show='form.currentDate1.$error.required')
                                        | Este campo es Requerido!
                                    div.error(ng-show='form.currentDate1.$error.date')
                                        | No es valido el dato!
                                    div.error(ng-show='form.currentDate1.$error.max')
                                        | el maximo es {{example.max | date: 'dd-MM-yyyy'}}
                                    div.error(ng-show='form.currentDate1.$error.min') 
                                        | el minimo es {{example.currentDate | date: 'dd-MM-yyyy'}}

                            div.col-xs-6
                                h4 Hasta
                                div.input-group
                                    span.input-group-addon
                                        i.glyphicon.glyphicon-calendar
                                    //- input.form-control(type="Date" name="hasta" min="1960-01-01" max="fecha" )
                                    input.form-control(type='date', name='currentDate2', ng-model='currentDate2', min="1960-01-01", max="{{limite | date: 'yyyy-MM-dd'}}", required='')
                                div.col-xs-12(ng-show='form.$submitted || form.currentDate2.$touched')
                                    div.error(ng-show='form.currentDate2.$error.required')
                                        | Este campo es Requerido!
                                    div.error(ng-show='form.currentDate2.$error.date')
                                        | No es valido el dato!
                                    div.error(ng-show='form.currentDate2.$error.max')
                                        | el maximo es {{example.max | date: 'dd-MM-yyyy'}}
                                    div.error(ng-show='form.currentDate2.$error.min') 
                                        | el minimo es {{example.currentDate | date: 'dd-MM-yyyy'}}
                        br
                        div.row
                            div.col-xs-6
                                input(type='text' name='alumno' placeholder='Alumno' class='form-control' ng-model="busqueda.alumno") 
                        br
                        div.row
                            div.col-xs-6
                                input(type='text' name='titulo' placeholder='Título' class='form-control' ng-model="busqueda.titulo")
                        br
                        div.row
                            div.col-xs-6
                                input(type='text' name='director' placeholder='Director' class='form-control' ng-model="busqueda.director")
                        br
                        div.row
                            div.col-xs-6
                                input(type='text' name='codirector' placeholder='Codirector' class='form-control' ng-model="busqueda.codirector")

                div.modal-footer
                    div.pull-left
                        button.btn.btn-danger(type='button', data-dismiss='modal',  ng-click='limpiar()') Cancelar
                    div.pull-right
                        button.btn.btn-primary(type="submit", class='btn btn-default', data-dismiss='modal', ng-click='busquedaT()')
                            i.fa.fa-spinner.fa-pulse.fa-lg.fa-fw(ng-show='isProcess')
                            //- span(ng-show='!isProcess') Buscar
                            span Buscar
                                            
