   div.ingreso(style='margin-top:50px' ng-app="estadisticas" ng-controller="graficas" ng-cloak)
      div.panel
        div.box-body(style='min-height: 700px; ')
          div.jumbotron(style='background: white')
            div.container.text-all
                div.row
                    div.col-md-3
                        div.well.well-sm
                            form.form-horizontal
                                a.text-center.text-all Estadística {{selectActas}}
                                div
                                    select.form-control(id='selectActas', name='selectActas',ng-model="selectActas" ng-click="selectgraficas()")
