                    div.col-md-4(style='float: right;')
                        div.well.well-sm
                            form.form-horizontal(action='/estadisticas/actas', method='post')
                                a.text-center.text-all Período
                                div.input-group
                                      span.input-group-addon
                                        i.glyphicon.glyphicon-calendar
                                      input#msg.form-control(type="month" name="mes" min="1960-01" placeholder='Introdusca un año')

                h2.text-all(style='text-align:center;' ng-repeat="elem in tipo") 
                    a(ng-repeat="x in elem" ng-if="selectActas == x") {{elem.select}}
                table#datatable
                    thead
                        tr
                            th nombre
                            th Total  
                    tbody(ng-repeat="elem in grafica1")
                       
                       
                div.nav-tabs-custom
                    ul.nav.nav-tabs.pull-right
                        li
